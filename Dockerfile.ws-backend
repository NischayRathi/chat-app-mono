FROM node:20-alpine

WORKDIR /app

# Copy everything
COPY . .

# Install pnpm
RUN npm install -g pnpm@9.0.0

# Install dependencies
RUN pnpm install --frozen-lockfile

# Build WS backend
RUN pnpm --filter ws-backend build

# Expose port
EXPOSE 8080

# Start (note: we're in /app, so path is apps/ws-backend/dist/index.js)
CMD ["node", "apps/ws-backend/dist/index.js"]
