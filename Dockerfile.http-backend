FROM node:20-alpine

WORKDIR /app

# Copy everything
COPY . .

# Install pnpm
RUN npm install -g pnpm@9.0.0

# Install dependencies
RUN pnpm install --frozen-lockfile

# Build HTTP backend
RUN pnpm --filter http-backend build

# Expose port
EXPOSE 3001

# Start (note: we're in /app, so path is apps/http-backend/dist/index.js)
CMD ["node", "apps/http-backend/dist/index.js"]
